<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="16dp">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/texto_intro"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/txtIntro"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/txtNome" app:layout_constraintBottom_toTopOf="@+id/lblCreditos"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:text="@string/iniciar_teste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnIniciar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNome"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:hint="@string/digite_seu_nome_aqui"
            android:minHeight="48dp" android:padding="20dp"/>
    <TextView
            android:text="@string/creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblCreditos"
            app:layout_constraintBottom_toTopOf="@+id/btnIniciar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_margin="10dp" android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>