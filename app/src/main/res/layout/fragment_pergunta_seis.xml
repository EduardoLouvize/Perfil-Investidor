<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.PerguntaSeisFragment" android:id="@+id/fragment_pergunta_seis">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="16dp">

        <TextView
                android:text="@string/pergunta_um"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
        <RadioGroup
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/radioGroupSete"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/btnAvancar">
            <RadioButton
                    android:text="Menos de 6 meses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_marginTop="10dp"/>
            <RadioButton
                    android:text="Entre 6 meses e 1 ano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2"
                    android:layout_marginTop="10dp"/>
            <RadioButton
                    android:text="Entre 1 ano e 3 anos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton3"
                    android:layout_marginTop="10dp"/>
            <RadioButton
                    android:text="Acima de 3 anos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton4"
                    android:layout_marginTop="10dp"/>
        </RadioGroup>
        <Button
                android:text="@string/avancar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnAvancar"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>